<div class="crud-div">
  
  <h2>Edit {{userInSession.username}}'s profile</h2>
<hr class="crud-bar">
  <form action="/auth/profile/{{userInSession._id}}/edit" method="post" enctype="multipart/form-data">
    <label class="crud-labels">First Name: 
      <input class="input-text-crud" type="text" name="firstName" maxlength="20" value="{{userInSession.firstName}}" />
    </label>
    <br>

    <label class="crud-labels">Last Name: 
      <input class="input-text-crud" type="text" name="lastName" maxlength="20" value="{{userInSession.lastName}}" />
    </label>
    <br>

    <label class="crud-labels">About me: 
      <textarea class="form-control" name="aboutMe" cols="34" rows="4" maxlength="1000" value="{{userInSession.aboutMe}}" /> </textarea>
    </label>
    <br>

    <label class="crud-labels">Profile picture: 
      <input class="crud-img" type="file" name="profile-picture-image" />
      <input type="text" name="existingImage" hidden value="{{userInSession.profilePicture}}" />
    </label>
    <br>
    <button class="btn custom-btn btn1-lp" id="crud-btn-update" type="submit">Update</button>
  </form>
</div>